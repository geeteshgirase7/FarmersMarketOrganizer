@model FarmersMarketOrganizer.Pages_Bookings.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Booking[0].Vendor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booking[0].Stall)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booking[0].MarketDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booking[0].IsConfirmed)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Booking) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Vendor.BusinessName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stall.LocationCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MarketDay.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsConfirmed)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
