@page
@model FarmersMarketOrganizer.Pages.Bookings.DeleteModel
@{
    ViewData["Title"] = "Delete Booking";
}

<h1>Delete Booking</h1>

<h4>Are you sure you want to delete this?</h4>
<hr />
<dl class="row">
    <dt class="col-sm-3">Vendor</dt>
    <dd class="col-sm-9">@Model.Booking.Vendor.BusinessName</dd>

    <dt class="col-sm-3">Stall</dt>
    <dd class="col-sm-9">@Model.Booking.Stall.LocationCode</dd>

    <dt class="col-sm-3">Market Day</dt>
    <dd class="col-sm-9">@Model.Booking.MarketDay.Date.ToShortDateString()</dd>

    <dt class="col-sm-3">Is Confirmed</dt>
    <dd class="col-sm-9">@Model.Booking.IsConfirmed</dd>
</dl>

<form method="post">
    <input type="hidden" asp-for="Booking.Id" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-page="./Index">Cancel</a>
</form>
