@page "{id:int}"
@model FarmersMarketOrganizer.Pages_Vendors.DeleteModel
@{
    ViewData["Title"] = "Delete Vendor";
}

<h1>Delete Vendor</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Vendor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Business Name</dt>
        <dd class="col-sm-10">@Model.Vendor.BusinessName</dd>

        <dt class="col-sm-2">Contact Name</dt>
        <dd class="col-sm-10">@Model.Vendor.ContactName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Vendor.Email</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Vendor.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Cancel</a>
    </form>
</div>
